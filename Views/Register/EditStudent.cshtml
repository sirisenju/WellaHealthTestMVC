@model UserModel

@{
   ViewData["Title"] = "Edit Student";
}

<h2>Edit Student Info</h2>
<div class="row">
	<div class="col-5">
		<form asp-controller="Register" asp-action="EditStudent" method="post">
			<div asp-validation-summary="All" class="text-danger"></div>
			<input type="text" asp-for="firstName" class="form-control" placeholder="First name" />
			<input type="text" asp-for="lastName" class="form-control" placeholder="Last name" />
			<input type="text" asp-for="course" class="form-control" placeholder="Course" />
			<input type="text" asp-for="age" class="form-control" placeholder="Age" />
			<input type="email" asp-for="emailAddress" class="form-control" placeholder="Email address" />
			<button type="submit" class="btn btn-primary w-100 mt-2">Done</button>
		</form>
	</div>
</div>